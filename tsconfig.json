{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "types": ["node"]
  },
  "include": ["src"]
}
